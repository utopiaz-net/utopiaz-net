---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="bg-white sticky z-50 w-full top-0 shadow-md">
  <nav id="main-nav" class="flex items-center justify-between py-8 container">
    <h2 class="font-semibold text-lg lg:text-xl">
      <a href="/" aria-label="Page d'accueil du blog">{SITE_TITLE}</a>
    </h2>
    <div class="flex items-center gap-1">
      <!-- Menu icons -->
      <button
        aria-label="toggle theme button"
        class="hover:bg-brand/15 focus:bg-brand/15 dark:hover:bg-slate-800 p-1.5 rounded-md cursor-pointer"
        title="Switch theme"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
          ></path>
        </svg>
      </button>
      <button
        aria-label="rss feed button"
        class="hover:bg-brand/15 focus:bg-brand/15 dark:hover:bg-slate-800 p-1.5 rounded-md cursor-pointer"
        title="RSS Feed"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12.75 19.5v-.75a7.5 7.5 0 00-7.5-7.5H4.5m0-6.75h.75c7.87 0 14.25 6.38 14.25 14.25v.75M6 18.75a.75.75 0 11-1.5 0 .75.75 0 011.5 0z"
          ></path>
        </svg>
      </button>
      <button
        aria-label="toggle menu button"
        aria-expanded="false"
        id="menu-btn"
        class="hover:bg-brand/15 focus:bg-brand/15 dark:hover:bg-slate-800 p-1.5 rounded-md cursor-pointer"
        title="Toggle menu"
      >
        <img src="hamburger-icon.svg" alt="" height="24" width="24" />
      </button>
    </div>
    <ul
      id="toggled-menu"
      class="bg-white w-full absolute top-0 left-0 -translate-y-full -z-10 border-b border-gray-300 flex flex-col items-center text-center shadow-md"
    >
      <li class="py-4 w-full font-semibold uppercase">
        <HeaderLink href="/">Home</HeaderLink>
      </li>
      <li class="py-4 w-full font-semibold uppercase">
        <HeaderLink href="/blog">Blog</HeaderLink>
      </li>
    </ul>
  </nav>
</header>
